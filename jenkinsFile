pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/C14-2025/Sistema-de-Reservas-de-Salas-Laborat-rios'
            }
        }

        stage('Backend - Instalar Dependências') {
            steps {
                dir('backend') {
                    bat """
                        python --version
                        python -m pip install --upgrade pip
                        pip install -r requirements.txt
                    """
                }
            }
        }

        stage('Backend - Testes') {
            steps {
                dir('backend') {
                    bat """pytest --junitxml=report.xml"""
                }
            }
            post {
                always {
                    junit 'backend/report.xml'
                }
            }
        }

        stage('Frontend - Instalar Dependências') {
            steps {
                dir('frontend') {
                    bat """npm install"""
                }
            }
        }

        stage('Frontend - Testes') {
            steps {
                dir('frontend') {
                    bat """npm test --watchAll=false --ci || exit 0"""
                }
            }
        }

        stage('Frontend - Build') {
            steps {
                dir('frontend') {
                    bat """npm run build"""
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline finalizada com sucesso!"
        }
        failure {
            echo "Pipeline falhou. Verifique os logs."
        }
    }
}

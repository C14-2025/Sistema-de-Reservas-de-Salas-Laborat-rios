pipeline {
    agent any

    environment {
        PYTHONPATH = "${WORKSPACE}/backend"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Backend - Setup venv e Instalar Dependências') {
            steps {
                dir('backend') {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Testes Unitários - Backend') {
            steps {
                dir('backend') {
                    sh '''
                        # Ativa venv
                        . venv/bin/activate

                        # Garante pytest-asyncio
                        pip install pytest-asyncio

                        # Ajusta PYTHONPATH para o backend
                        export PYTHONPATH=$(pwd)

                        # Executa todos os testes (mockando banco de dados onde necessário)
                        pytest tests/ --html=report_bd.html --self-contained-html
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'backend/report_bd.html', allowEmptyArchive: true

                    publishHTML([
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'backend',
                        reportFiles: 'report_bd.html',
                        reportName: 'Report Backend'
                    ])
                }
            }
        }

        stage('Frontend - Instalar Dependências') {
            steps {
                dir('frontend') {
                    sh 'rm -rf node_modules package-lock.json'
                    sh 'npm install'
                }
            }
        }

        stage('Frontend - Testes') {
    steps {
        dir('frontend') {
            sh '''
                # Executa testes e gera relatório JUnit
                npm run test -- --run --reporter=junit --outputFile=test-results.xml || true
            '''
        }
    }

    post {
        always {
            
            junit 'frontend/test-results.xml'
        }
    }
}


        stage('Frontend - Build') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finalizada"
        }
    }
}

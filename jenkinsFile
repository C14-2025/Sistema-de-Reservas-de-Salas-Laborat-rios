pipeline {
    agent any

    environment {
        PYTHONPATH = "${WORKSPACE}/backend"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Backend - Setup venv e Instalar Dependências') {
            steps {
                dir('backend') {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Testes Unitários - Banco de Dados e API') {
            steps {
                dir('backend') {
                    sh '''
                        . venv/bin/activate
                        if [ -d tests ]; then
                            pytest tests/ --html=report_bd.html --self-contained-html || true
                        else
                            echo "Nenhum diretório de testes encontrado, pulando"
                        fi
                    '''
                }
            }

            post {
                always {
                    archiveArtifacts artifacts: 'backend/report_bd.html', allowEmptyArchive: true

                    publishHTML([
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'backend',
                        reportFiles: 'report_bd.html',
                        reportName: 'Report BD'
                    ])
                }
            }
        }

        stage('Frontend - Instalar Dependências') {
            steps {
                dir('frontend') {
                    sh 'rm -rf node_modules package-lock.json'
                    sh 'npm install'
                }
            }
        }

        cd frontend
npm install --save-dev xunit-viewer



        stage('Frontend - Build') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finalizada"
        }
    }
}

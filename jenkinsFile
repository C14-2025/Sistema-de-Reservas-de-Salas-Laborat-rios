pipeline {
    agent any

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Backend - Setup venv e Instalar Dependências') {
            steps {
                dir('backend') {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Testes Unitários - Backend') {
            steps {
                dir('backend') {
                    sh '''
                        . venv/bin/activate
                        pip install pytest-asyncio

                        export PYTHONPATH=$(pwd)/..

                        pytest tests/ --html=report_bd.html --self-contained-html -v
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'backend/report_bd.html', allowEmptyArchive: true
                    publishHTML([
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'backend',
                        reportFiles: 'report_bd.html',
                        reportName: 'Report Backend'
                    ])
                }
            }
        }

        stage('Frontend - Instalar Dependências') {
            steps {
                dir('frontend') {
                    sh 'rm -rf node_modules package-lock.json'
                    sh 'npm install'
                }
            }
        }

        stage('Frontend - Testes') {
            steps {
                dir('frontend') {
                    sh '''
                        # Executa testes frontend com relatório HTML
                        npm run test -- --reporter=html --reporter-options output=frontend/test-report.html
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'frontend/test-report.html', allowEmptyArchive: true
                    publishHTML([
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'frontend',
                        reportFiles: 'test-report.html',
                        reportName: 'Frontend HTML Report'
                    ])
                }
            }
        }

        stage('Frontend - Build') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finalizada"
        }
    }
}

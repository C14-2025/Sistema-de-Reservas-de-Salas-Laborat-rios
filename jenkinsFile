pipeline {
    agent any

    tools {
        nodejs "node18"
    }

    stages {

        stage('Setup Python') {
            steps {
                script {
                    def pythonHome = tool name: 'python3.10', type: 'jenkins.plugins.shiningpanda.tools.PythonInstallation'
                    echo "Python carregado em: ${pythonHome}"

                    
                    env.PATH = "${pythonHome};${pythonHome}\\Scripts;${env.PATH}"
                }
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'refactor/global',
                    url: 'https://github.com/C14-2025/Sistema-de-Reservas-de-Salas-Laborat-rios'
            }
        }

        // BACKEND -------------------------------------
        stage('Backend - Instalar Dependências') {
            steps {
                dir('backend') {
                    bat """
                        python --version
                        python -m pip install --upgrade pip
                        pip install -r requirements.txt
                    """
                }
            }
        }

        stage('Backend - Testes') {
            steps {
                dir('backend') {
                    bat "pytest --junitxml=report.xml || exit /b 0"
                }
            }
            post {
                always {
                    junit 'backend/report.xml'
                }
            }
        }

        // FRONTEND -------------------------------------
        stage('Frontend - Instalar Dependências') {
            steps {
                dir('frontend') {
                    bat "npm install"
                }
            }
        }

        stage('Frontend - Testes') {
            steps {
                dir('frontend') {
                    bat "npm test --watchAll=false --ci || exit /b 0"
                }
            }
        }

        stage('Frontend - Build') {
            steps {
                dir('frontend') {
                    bat "npm run build"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline finalizada com sucesso!"
        }
        failure {
            echo "Pipeline falhou, verifique os logs."
        }
    }
}

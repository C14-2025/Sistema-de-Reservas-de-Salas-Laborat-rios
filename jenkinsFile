pipeline {
    agent any

    environment {
        PYTHONPATH = "${WORKSPACE}/backend"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Backend - Setup venv e Instalar Dependências') {
            steps {
                dir('backend') {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }

       stage('Frontend - Testes') {
    steps {
        dir('frontend') {
            sh '''
                npm install --save-dev xunit-viewer
                npm run test -- --reporter=junit --outputFile=test-results.xml
                npx xunit-viewer --results=test-results.xml --output=test-results.html --title="Frontend Test Report"
            '''
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'frontend/test-results.html', allowEmptyArchive: true
            publishHTML([
                allowMissing: true,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'frontend',
                reportFiles: 'test-results.html',
                reportName: 'Frontend Test Report'
            ])
        }
    }
}


        stage('Frontend - Instalar Dependências') {
            steps {
                dir('frontend') {
                    sh 'rm -rf node_modules package-lock.json'
                    sh 'npm install'
                }
            }
        }

        cd frontend
npm install --save-dev xunit-viewer



        stage('Frontend - Build') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finalizada"
        }
    }
}

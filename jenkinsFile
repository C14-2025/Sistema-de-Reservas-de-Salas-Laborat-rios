pipeline {
    agent any

    environment {
        // Caminho da venv
        VENV_PATH = "${WORKSPACE}/venv"
        // Cache PYTHONPATH para backend
        PYTHONPATH = "${WORKSPACE}/backend"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Setup Python venv') {
            steps {
                sh '''
                    python3 -m venv ${VENV_PATH}
                    . ${VENV_PATH}/bin/activate
                    pip install --upgrade pip
                '''
            }
        }

        stage('Backend - Instalar Dependências') {
            steps {
                dir('backend') {
                    sh '''
                        . ../venv/bin/activate
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Backend - Testes') {
            steps {
                dir('backend') {
                    sh '''
                        . ../venv/bin/activate
                        export PYTHONPATH=$PYTHONPATH:$(pwd)
                        pytest --junitxml=report.xml || true
                    '''
                }
            }
            post {
                always {
                    junit 'backend/report.xml'
                }
            }
        }

        stage('Frontend - Instalar Dependências') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
            }
        }

        stage('Frontend - Testes') {
            steps {
                dir('frontend') {
                    sh '''
                        if npm run | grep -q test; then
                            npm test -- --watchAll=false --ci || true
                        else
                            echo "Script test não encontrado, pulando testes frontend"
                        fi
                    '''
                }
            }
        }

        stage('Frontend - Build') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finalizada"
        }
    }
}

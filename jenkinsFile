pipeline {
    agent any

    environment {
        PYTHONPATH = "${WORKSPACE}/backend"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Backend - Setup venv e Instalar Dependências') {
            steps {
                dir('backend') {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Testes Unitários - Backend') {
    steps {
        dir('backend') {
            sh '''
                . venv/bin/activate
                mkdir -p test-results
                if [ -f tests/test_pytest.py ]; then
                    pytest tests/ --junitxml=test-results/backend-results.xml || true
                else
                    echo "Nenhum testPytest.py encontrado, pulando testes"
                fi
            '''
        }
    }

    post {
        always {
            
            junit 'backend/test-results/backend-results.xml'

          
            archiveArtifacts artifacts: 'backend/test-results/**', allowEmptyArchive: true
        }
    }
}

        stage('Frontend - Instalar Dependências') {
            steps {
                dir('frontend') {
                    sh '''
                        rm -rf node_modules package-lock.json
                        npm install
                    '''
                }
            }
        }

        stage('Frontend - Testes') {
            steps {
                dir('frontend') {
                    sh 'npm run test'
                }
            }
        }

        stage('Frontend - Testes (Vitest XML)') {
            steps {
                dir('frontend') {
                    sh '''
                        mkdir -p test-results
                        npx vitest run --reporter=junit --outputFile=test-results/vitest-results.xml
                    '''
                }
            }

            post {
                always {
                    junit 'frontend/test-results/vitest-results.xml'
                }
            }
        }

        stage('Frontend - Build') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finalizada"
        }
    }
}

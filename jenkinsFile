pipeline {
    agent any

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Backend - Setup venv e Instalar Dependências') {
            steps {
                dir('backend') {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Testes Unitários - Backend') {
            steps {
                dir('backend') {
                    sh '''
                        # Ativa venv e instala pytest-asyncio
                        . venv/bin/activate
                        pip install pytest-asyncio

                        # Ajusta PYTHONPATH para que imports backend.app funcionem
                        export PYTHONPATH=$(pwd)/..

                        # Executa todos os testes com saída detalhada e relatório HTML
                        pytest tests/ --html=report_bd.html --self-contained-html -v
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts artifacts: 'backend/report_bd.html', allowEmptyArchive: true

                    publishHTML([
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'backend',
                        reportFiles: 'report_bd.html',
                        reportName: 'Report Backend'
                    ])
                }
            }
        }

        stage('Frontend - Instalar Dependências') {
            steps {
                dir('frontend') {
                    sh 'rm -rf node_modules package-lock.json'
                    sh 'npm install'
                }
            }
        }

        stage('Frontend - Testes') {
            steps {
                dir('frontend') {
                    sh '''
                        # Executa testes e gera relatório JUnit
                        npm run test -- --run --reporter=junit --outputFile=test-results.xml
                    '''
                }
            }
            post {
                always {
                    junit 'frontend/test-results.xml'
                }
            }
        }

        stage('Frontend - Build') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finalizada"
        }
    }
}

pipeline {
    agent any

    environment {
        PYTHONPATH = "${WORKSPACE}/backend"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Backend e Frontend em Paralelo') {
            parallel {

                stage('Backend') {
                    stages {

                        stage('Backend - Setup venv e Dependências') {
                            steps {
                                dir('backend') {
                                    sh '''
                                        python3 -m venv venv
                                        . venv/bin/activate
                                        pip install --upgrade pip
                                        pip install -r requirements.txt
                                    '''
                                }
                            }
                        }

                        stage('Backend - Testes Unitários') {
                            steps {
                                dir('backend') {
                                    sh '''
                                        . venv/bin/activate
                                        mkdir -p test-results

                                        if [ -f tests/test_tests.py ]; then
                                            pytest tests/ \
                                                --html=report_bd.html \
                                                --self-contained-html \
                                                --junit-xml=test-results/backend-results.xml \
                                                || true
                                        else
                                            echo "Nenhum test_tests.py encontrado, pulando testes"
                                        fi
                                    '''
                                }
                            }

                            post {
                                always {
                                    archiveArtifacts artifacts: 'backend/report_bd.html', allowEmptyArchive: true
                                    archiveArtifacts artifacts: 'backend/test-results/backend-results.xml', allowEmptyArchive: true

                                    publishHTML([
                                        allowMissing: true,
                                        alwaysLinkToLastBuild: true,
                                        keepAll: true,
                                        reportDir: 'backend',
                                        reportFiles: 'report_bd.html',
                                        reportName: 'Report BD'
                                    ])

                                    junit 'backend/test-results/backend-results.xml'
                                }
                            }
                        }

                    }
                }

                stage('Frontend') {
                    stages {

                        stage('Frontend - Instalar Dependências') {
                            steps {
                                dir('frontend') {
                                    sh '''
                                        rm -rf node_modules package-lock.json
                                        npm install
                                    '''
                                }
                            }
                        }

                        stage('Frontend - Testes') {
                            steps {
                                dir('frontend') {
                                    sh 'npm run test'
                                }
                            }
                        }

                        stage('Frontend - Testes (Vitest XML)') {
                            steps {
                                dir('frontend') {
                                    sh '''
                                        mkdir -p test-results
                                        npx vitest run --reporter=junit --outputFile=test-results/vitest-results.xml
                                    '''
                                }
                            }

                            post {
                                always {
                                    junit 'frontend/test-results/vitest-results.xml'
                                }
                            }
                        }

                        stage('Frontend - Build') {
                            steps {
                                dir('frontend') {
                                    sh 'npm run build'
                                }
                            }
                        }

                    }
                }

            } // fim do parallel
        }

    }

    post {
        always {
            echo "Pipeline finalizada"
        }
    }
}

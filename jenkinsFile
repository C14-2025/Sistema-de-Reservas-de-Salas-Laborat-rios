pipeline {
    agent any

    environment {
        VENV_PATH = "${WORKSPACE}/venv"
        PYTHONPATH = "${WORKSPACE}"   
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Setup Python venv') {
            steps {
                sh '''
                    python3 -m venv ${VENV_PATH}
                    . ${VENV_PATH}/bin/activate
                    pip install --upgrade pip
                '''
            }
        }

        stage('Backend - Instalar Dependências') {
            steps {
                sh '''
                    . venv/bin/activate
                    pip install -r backend/requirements.txt
                '''
            }
        }

        stage('Backend - Testes') {
            steps {
                sh '''
                    . venv/bin/activate
                    
                    # Garantir que o PYTHONPATH aponte para o workspace (raiz)
                    export PYTHONPATH=${WORKSPACE}

                    # Criar pasta de relatórios
                    mkdir -p backend/reports

                    # Rodar pytest nos testes
                    pytest backend/tests --junitxml=backend/reports/test-results.xml || true
                '''
            }
            post {
                always {
                    junit 'backend/reports/test-results.xml'
                }
            }
        }

        stage('Frontend - Instalar Dependências') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
            }
        }

        stage('Frontend - Testes') {
            steps {
                dir('frontend') {
                    sh '''
                        if npm run | grep -q test; then
                            npm test -- --watchAll=false --ci || true
                        else
                            echo "Script test não encontrado, pulando testes frontend"
                        fi
                    '''
                }
            }
        }

        stage('Frontend - Build') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finalizada"
        }
    }
}
